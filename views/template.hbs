{{#if isPlanner}}
<br>
  <h1>Templates</h1>

  <form action='../planner/createTemplate' method='POST'>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Select a template</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01">
        <option selected>Choose...</option>
        <option value="monthlyRevision">Monthly Determination of Elegibility</option>
      </select>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Select a Group</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01" name='groupId'>
        <option selected>Choose...</option>
        {{#each items.value}} 
          <option value='{{this.id}}'>{{this.displayName}}</option>
        {{/each}}
      </select>
    </div>

    {{!-- <br> <br>
    <label>Select Group</label>
    <p>Choose the group to add the the template to:</p>
