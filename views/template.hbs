{{#if isPlanner}}
<br>
  <h1>Templates</h1>
<section class='doubleLayout'>
  <h2>Create</h2>
  <form action='../planner/createTemplate' method='POST'>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Select a template</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01">
        <option selected>Choose...</option>
        <option value="monthlyRevision">Monthly Determination of Elegibility</option>
      </select>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <label class="input-group-text" for="inputGroupSelect01">Select a Group</label>
      </div>
      <select class="custom-select" id="inputGroupSelect01" name='groupId'>
        <option selected>Choose...</option>
        {{#each items.value}} 
          <option value='{{this.id}}'>{{this.displayName}}</option>
        {{/each}}
      </select>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Plan Name</span>
      </div>
      <input type="text" class="form-control" placeholder="Enter a name for this plan" aria-label="planname" aria-describedby="basic-addon1" name='planName'>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Enter list</span>
      </div>
      <input type="text" class="form-control" placeholder="comma seperated list of names" aria-label="planname" aria-describedby="basic-addon1" name="nameList">
    </div>

    <input class="btn btn-primary btn-lg" type="submit" value="Submit">
  </form>
</section>

