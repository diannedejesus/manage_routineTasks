{{#if isPlanner}}

  <form action='../planner/createTemplate' method='POST'>
    <p>Templates:</p>

    <input type='radio' id='template' name='template' value='monthyRevision'> <label for='template'>Monthly Determination of Elegibility</label>
    <p>Choose the group to add the the template to:</p>

    <select name='groupId'>
      
        {{#each items.value}} 
          <option value='{{this.id}}'>{{this.displayName}}</option>
        {{/each}}

    </select>
    <br> <br>
    <label for='nameList'>Enter list</label>
    <input type="text" name="nameList" id="nameList" placeholder="comma seperated list of names">
    <br> <br>
    <input type="submit" value="Submit">
  </form>

{{else if isCreated}}
  <p>The template was created</p>
{{/if}}
