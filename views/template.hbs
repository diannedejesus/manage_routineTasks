        {{#each items.value}} 
          <option value='{{this.id}}'>{{this.displayName}}</option>
        {{/each}}

    </select> --}}

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Plan Name</span>
      </div>
      <input type="text" class="form-control" placeholder="Enter a name for this plan" aria-label="planname" aria-describedby="basic-addon1" name='planName'>
    </div>

    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text" id="basic-addon1">Enter list</span>
      </div>
      <input type="text" class="form-control" placeholder="comma seperated list of names" aria-label="planname" aria-describedby="basic-addon1" name="nameList">
    </div>

    {{!-- <br> <br>
    <label for='name'>Enter Name</label>
    <input type="text" name="name" id="name" placeholder="Name"> --}}

    {{!-- <label for='nameList'>Enter list</label>
    <input type="text" name="nameList" id="nameList" placeholder="comma seperated list of names">
    <br> <br> --}}
    <input class="btn btn-primary btn-lg" type="submit" value="Submit">
  </form>

{{else if isCreated}}
  <p>The template was created</p>
{{/if}}
